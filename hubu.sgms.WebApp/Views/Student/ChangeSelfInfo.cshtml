@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>学生修改个人信息</title>
    <link href="~/Scripts/bs/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Scripts/layui/css/layui.css">
    <link href="~/Content/student.css" rel="stylesheet" />
</head>
<body>
    <!--修改个人信息-->
    @{ var student = ViewData["student"] as hubu.sgms.Model.Student;}
    <div class="container">
        <div class="z_content">
            <div class="embed-responsive embed-responsive-16by9">
                <form id="defaultForm" class="form-horizontal" action="javascript:void(0);" style="margin-top: 10px; ">
                        <div class="form-group" >
                            <label class="col-lg-3 control-label">姓名</label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" name="student_name" placeholder="姓名" value="@student.student_name" />
                            </div>
                        </div>

                        <div class="form-group" >
                            <label class="col-lg-3 control-label">学号</label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" name="student_id_card" placeholder="学号" value="@student.student_id_card" />
                            </div>
                        </div>

                        <div class="form-group" >
                            <label class="col-lg-3 control-label">性别</label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" name="student_id_card" placeholder="性别" value="@student.student_sex" />
                            </div>
                        </div>
                   
                    <div class="form-group"  >
                        <label class="col-lg-3 control-label">年级</label>
                        <div class="col-lg-6">
                            <input type="text" class="form-control" name="student_id_card" placeholder="年级" value="@student.student_grade"/>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-lg-3 control-label">学生类型</label>
                        <div class="col-lg-6">
                            <input type="text" class="form-control" name="student_id_card" placeholder="学生类型" value="@student.student_type" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">院系</label>
                        <div class="col-lg-6">
                            <input type="text" class="form-control" name="student_id_card" placeholder="院系" value="@student.student_department" />
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-lg-3 control-label">专业</label>
                        <div class="col-lg-6">
                            <input type="text" class="form-control" name="student_id_card" placeholder="专业" value="@student.student_major" />
                        </div>
                    </div>

                    <!--级联菜单城市选择-->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">住宿地点</label>
                        <div class="col-lg-6">
                            <input type="text" class="form-control" name="student_id_card" placeholder="住宿地点" value="@student.student_address" />
                        </div>
                    </div>


                    <!--级联菜单城市选择-->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">手机号</label>
                        <div class="col-lg-6">
                            <input type="text" class="form-control" name="student_phone" placeholder="手机号" value="@student.student_contact"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">所获奖项</label>
                        <div class="col-lg-6">
                            <textarea rows="3" class="form-control" name="student_award" value="@student.student_award"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">个人描述</label>
                        <div class="col-lg-6">
                            <textarea rows="3" class="form-control" name="student_other" value="@student.student_other"></textarea>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-lg-2 col-lg-offset-4">
                            <button type="button" onclick="changeStuInfo();" class="btn btn-success " name="signup" value="Sign up">&nbsp;&nbsp;提交&nbsp;&nbsp;</button>
                        </div>
                        <div class="col-lg-6">
                            <button type="reset" class="btn btn-warning" name="reset" value="重置" >&nbsp;&nbsp;重置&nbsp;&nbsp;</button>
                        </div>
                    </div>


                </form>
            </div>
        </div>
    </div>
            <script src="~/Scripts/student.js"></script>
</body>
</html>
