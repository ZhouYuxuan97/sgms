@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>
    <link rel="stylesheet" href="~/Content/admin/style.default.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/admin/pikaday.css" />
    <script src="~/Scripts/Course/pikaday.js"></script>
    <script src="~/Scripts/Course/jquery.min.js"></script>
    <script src="~/Scripts/Course/sweetalert2.min.js"></script>
    <link rel="stylesheet" href="~/Content/admin/sweetalert2.min.css">
</head>
<body class="withvernav">
    <div style="height:50px;background-color:#31425D;text-align:center" align="Center">
        <h1 vertical-align="middle" style="line-height:45px ">Add Administrator Infromation</h1>
    </div>
    <!--form表单中固定有submit按钮，onsubmit表示在提交时所做的js判断-->
    <form id="formid" class="stdform stdform2" action="/Admin/SubmitAddAdminInfo" method="post">
        <p>
            <label>Name</label>
            <span class="field"><input type="text" name="adminName" id="adminName" class="longinput" style="width:280px;" /></span>
        </p>
        <p>
            <label>Gender</label>
            <span class="field" style="width:300px;">
                <select id="adminSex" name="adminSex" style="width:300px;">
                    <option value="" style="display: none;" disabled selected>Gender</option>
                    <option value="男">Male</option>
                    <option value="女">Female</option>
                    <option value="未知">Unknown</option>
                </select>
            </span>
        </p>
        <p>
            <label>ID Card</label>
            <span class="field"><input type="text" name="adminIDCard" id="adminIDCard" class="longinput" style="width:280px;" /></span>
        </p>
        <p>
            <label>College</label>
            <span class="field" style="width:500px;">
                <select name="adminDepartment" id="adminDepartment" style="width:300px;">
                    <option value="" style="display: none;" disabled selected>- Select -</option>
                    <option value="文学院">School of Chinese Language and Literature</option>
                    <option value="新闻传播学院">School of Journalism and Communication</option>
                    <option value="商学院">School of Business</option>
                    <option value="政法与公共管理学院">College of Politics & Law and Public Administration</option>
                    <option value="外国语学院">School of Foreign Languages</option>
                    <option value="历史文化学院">School of History and Culture</option>
                    <option value="教育学院">Faculty of Education</option>
                    <option value="哲学学院">School of philosophy</option>
                    <option value="马克思主义学院">School of Marxism</option>
                    <option value="数学与统计学学院">Faculty of Mathematics and Statistics</option>
                    <option value="物理与电子科学学院">Faculty of Physics and Electronic Science</option>
                    <option value="化学化工学院">College of Chenistry & Chemical Engineering</option>
                    <option value="生命科学学院">College of Life Science</option>
                    <option value="资源环境学院">Faculty of Resource and Environmental Science</option>
                    <option value="计算机与信息工程学院">School of Computer Science and Information Engineering</option>
                    <option value="材料科学与工程学院">School of Materials Science and Engineering</option>
                    <option value="艺术学院">School of Art</option>
                    <option value="体育学院">School of Physical Education</option>
                    <option value="通识教育学院">College of General Education</option>
                    <option value="楚才学院">Chucai Honors College</option>
                    <option value="国际教育学院">School of International Education</option>
                </select>
            </span>
        </p>

        <!--上传照片-->

        <p>
            <label>Phone Number</label>
            <span class="field"><input type="text" name="adminContact" id="adminContact" class="longinput" style="width:280px;" /></span>
        </p>
        <p>
            <label>Characteristic</label>
            <span class="field"><input type="text" name="adminOther" id="adminOther" class="longinput" style="width:280px;" /></span>
        </p>
        <p>
            <label>Status</label>
            <span class="field" style="width:400px;">
                <select name="adminStatus" id="adminStatus" style="width:300px;">
                    <option value="" style="display: none;" disabled selected >- Select -</option>
                    <option value="1">Normal</option>
                    <option value="2">Vacation</option>
                    <option value="3">Retire</option>
                </select>
            </span>
        </p>
        <div class="showcase sweet" style="height:50px;background-color:white" align="Center">
            <button class="submit" align="Center" style="width:120px;margin-top: 10px;">Add</button>
        </div>
    </form>

    <script>
        $('.showcase.sweet button').on('click', function () {
            var adminName = document.getElementById("adminName").value;
            var adminSex = document.getElementById("adminSex").value;
            var adminIDCard = document.getElementById("adminIDCard").value;
            var adminDepartment = document.getElementById("adminDepartment").value;
            var adminContact = document.getElementById("adminContact").value;
            var adminOther = document.getElementById("adminOther").value;
            var adminStatus = document.getElementById("adminStatus").value;

          
            if (adminName == '' || adminSex == '' || adminIDCard == '' || adminDepartment == '' || adminContact == '') {
                swal('Error', 'Please Check Empty Column', 'Error');
                return false;
            }else {
                document.getElementById("formid").submit();
            }
        });
    </script>
</body>
</html>