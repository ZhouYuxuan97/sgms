@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>管理员修改个人信息</title>
    <link href="~/Scripts/bs/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Scripts/layui/css/layui.css">
    <link href="~/Content/student.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Scripts/bs/js/jquery.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bs/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/pcasunzip.js" charset="gb2312"></script>
</head>
<body>
    <!--修改个人信息-->
    <div class="container">
        <form id="defaultForm" class="form-horizontal" action="javascript:void(0);" style="margin-top: 10px;">

            <input type="hidden" id="studentID" class="form-control" name="studentID" placeholder="@ViewData["adminID"]" 
                   value="@ViewData["adminID"]" disabled="disabled" />

            <div class="form-group">
                <label class="col-lg-3 control-label">用户名</label>
                <div class="col-lg-6">
                    <input disabled="disabled" type="text" class="form-control" name="student_name" placeholder="@ViewData["adminName"]" value="@ViewData["adminName"]" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-3 control-label">性别</label>
                <div class="col-lg-6">
                    <input disabled="disabled" type="text" class="form-control" name="student_name" placeholder="@ViewData["adminSex"]" value="@ViewData["adminSex"]" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-3 control-label">账号</label>
                <div class="col-lg-6">
                    <input disabled="disabled" type="text" class="form-control" name="student_id_card" placeholder="@ViewData["administrator_id_card"]" value="@ViewData["administrator_id_card"]" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-3 control-label">院系</label>
                <div class="col-lg-6">
                    <input disabled="disabled" type="text" class="form-control" name="email" placeholder="@ViewData["adminDepartment"]" value="@ViewData["adminDepartment"]" />
                </div>
            </div>       


            <div class="form-group">
                <label class="col-lg-3 control-label">联系方式</label>
                <div class="col-lg-6">
                    <input id="studentContact" type="text" class="form-control" name="student_phone" placeholder="@ViewData["adminContact"]" value="@ViewData["adminContact"]" />
                </div>
            </div>

        
            <div class="form-group">
                <label class="col-lg-3 control-label">个人描述</label>
                <div class="col-lg-6">
                    <textarea id="studentOther" rows="3" class="form-control" name="student_other" placeholder="@ViewData["adminOther"]"  style="height:170px" value="@ViewData["adminOther"]"></textarea>
                </div>
            </div>


            <div class="form-group">
                <div class="col-lg-2 col-lg-offset-4">
                    <button type="button" onclick="changeStuInfo();" class="btn btn-success " name="signup" value="Sign up" >&nbsp;&nbsp;提交&nbsp;&nbsp;</button>
                </div>
                <div class="col-lg-6">
                    <button type="reset" class="btn btn-warning" name="reset" value="重置" >&nbsp;&nbsp;重置&nbsp;&nbsp;</button>
                </div>
            </div>
        </form>
    </div>


    <script>
        function changeStuInfo() {
            var Contact = document.getElementById("studentContact").value;
            var Other = document.getElementById("studentOther").value;
            var id=@ViewData["adminID"];
            window.location.href = "/Admin/SubmitUpdateAdInfo?adminID="+id+"&contact="+Contact+"&other="+Other;
        }

    </script>
   
</body>
</html>
